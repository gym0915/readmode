{
  "name": "readmode-plasmo",
  "displayName": "Readfun",
  "version": "0.0.1",
  "description": "Make reading fun",
  "author": "gym0915@hotmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "generate-icons": "tsx scripts/generate-icons.tsx"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "@tabler/icons-react": "^3.23.0",
    "@tailwindcss/typography": "^0.5.10",
    "framer-motion": "^11.0.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7",
    "react-toastify": "^10.0.6",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "semver": "^7.6.3",
    "tailwindcss": "^3.4.1",
    "vfile": "5.3.7",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "lucide-react": "^0.294.0",
    "postcss": "^8.1.0",
    "prettier": "3.2.4",
    "sharp": "^0.32.6",
    "svgo": "^3.0.2",
    "tsx": "^4.19.2",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "host_permissions": [
      "https://*/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals"
    },
    "icons": {
      "16": "~assets/icons/icon-16.png",
      "32": "~assets/icons/icon-32.png"
    },
    "action": {
      "default_icon": {
        "16": "~assets/icons/icon-16.png",
        "32": "~assets/icons/icon-32.png"
      }
    },
    "background": {
      "service_worker": "background/index.ts",
      "type": "module"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "unlimitedStorage"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "~/modules/reader/content/index.ts"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*",
          "public/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "plasmo": {
      "resolveExtensions": [
        ".tsx",
        ".ts",
        ".js"
      ]
    }
  }
}
